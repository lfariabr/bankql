{
    "compilerOptions": {
      "target": "es2020",                       
      "module": "commonjs",                     
      "moduleResolution": "node",               
      "outDir": "dist",                         
      "rootDir": "src",                         
      "esModuleInterop": true,                  
      "allowSyntheticDefaultImports": true,     
      "strict": true,                           
      "forceConsistentCasingInFileNames": true  
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }